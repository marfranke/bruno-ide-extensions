{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "bruno",
	"scopeName": "source.bru",
	"patterns": [
		{"include": "#strings"},

		{"include": "#meta-block"},

		{"include": "#get-block"},
		{"include": "#post-block"},
		{"include": "#put-block"},
		{"include": "#delete-block"},
		{"include": "#options-block"},
		{"include": "#head-block"},
		{"include": "#trace-block"},
