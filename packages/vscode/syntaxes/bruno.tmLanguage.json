			"name": "meta.auth.bruno",
			"begin": "^(auth)(:)(awsv4|basic|bearer|digest|oauth2)\\s*\\{",
			"end": "^\\}",
			"beginCaptures": {
				"1": {
					"name": "keyword.bruno"
				},
				"2": {
					"name": "keyword.operator.bruno"
				},
				"3": {
					"name": "keyword.bruno"
				}
			},
			"patterns": [{ "include": "#dictionary" }]
		},
		"body-block": {
