	"repository": {
		"strings": {
			"name": "string.quoted.double.bruno",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bruno",
					"match": "\\\\."
				}
			]
		},
		"meta-block": {
			"name": "meta.meta-block.bruno",
			"begin": "^meta\\s*\\{",
			"end": "^\\}\\s*",
			"beginCaptures": {
				"0": {
					"name": "keyword.bruno"
				}
			},
			"patterns": [{"include": "#dictionary"}]
		},
		"get-block": {
