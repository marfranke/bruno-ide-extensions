		"dictionary": {
			"patterns": [{
				"match": "^\\s*([^\\:]+)[\\:]\\s+([^\\n]+)\\s*$",
				"captures": {
					"1": {
						"name": "entity.name.tag.bruno"
					},
					"2": {
						"name": "string.bruno"
					}
				}
			}]
